{
  "name": "upowdb",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "postbuild": "mkdir -p dist/static/wasm/; cp node_modules/sql.js/dist/sql-wasm.wasm dist/static/wasm/sql-wasm.wasm; cp -r submodules/blockly/dist/ dist/static/blockly/; cp -r submodules/blockly/blockly/media dist/static/blockly/",
    "lint": "vue-cli-service lint",
    "pretest": "copy node_modules/sql.js/dist/sql-wasm.wasm dist/static/wasm/sql-wasm.wasm",
    "test:e2e": "vue-cli-service test:e2e",
    "test:unit": "vue-cli-service test:unit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
	"*.{ts,js,vue}": ["prettier --write", "git add"]
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.19",
    "@fortawesome/free-solid-svg-icons": "^5.9.0",
    "@fortawesome/vue-fontawesome": "^0.1.6",
    "@types/pdfmake": "^0.1.8",
    "@types/sql.js": "^1.0.2",
    "bootstrap": "^4.3.1",
    "bootstrap-vue": "^2.0.0-rc.26",
    "core-js": "^2.6.5",
    "font-awesome": "^4.7.0",
    "jquery": "^3.4.1",
    "pdfmake": "^0.1.58",
    "register-service-worker": "^1.6.2",
    "sql.js": "^1.0.0",
    "vue": "^2.6.10",
    "vue-class-component": "^7.0.2",
    "vue-i18n": "^8.12.0",
    "vue-property-decorator": "^8.1.0",
    "vue-router": "^3.0.3",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.0",
    "@types/mocha": "^5.2.4",
    "@types/sinon": "^7.0.13",
    "@vue/cli-plugin-babel": "^3.9.0",
    "@vue/cli-plugin-e2e-nightwatch": "^3.9.0",
    "@vue/cli-plugin-eslint": "^3.10.0",
    "@vue/cli-plugin-pwa": "^3.9.0",
    "@vue/cli-plugin-typescript": "^3.9.0",
    "@vue/cli-plugin-unit-mocha": "^3.9.0",
    "@vue/cli-service": "^3.9.0",
    "@vue/eslint-config-prettier": "^5.0.0",
    "@vue/eslint-config-typescript": "^4.0.0",
    "@vue/test-utils": "^1.0.0-beta.29",
    "babel-eslint": "^10.0.2",
    "babel-plugin-istanbul": "^5.2.0",
    "chai": "^4.1.2",
    "eslint": "^6.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-vue": "^5.2.3",
    "husky": "^3.0.4",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jsdom": "^15.1.1",
    "jsdom-global": "^3.0.2",
    "lint-staged": "^9.2.3",
    "node-sass": "^4.9.0",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "sass-loader": "^7.1.0",
    "sinon": "^7.4.1",
    "source-map-support": "^0.5.13",
    "typescript": "^3.4.3",
    "vue-template-compiler": "^2.6.10",
    "vue-test-chai": "^1.0.0-3"
  },
  "eslintIgnore": [
    "**/*.d.ts"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "skip-full": true,
    "include": [
      "src/**/*.{js,ts,vue}"
    ],
    "exclude": [
      "src/*.js"
    ],
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ],
    "extension": [
      ".js",
      ".ts",
      ".vue"
    ],
    "all": true
  }
}
